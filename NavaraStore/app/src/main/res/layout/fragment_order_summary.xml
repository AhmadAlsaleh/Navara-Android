<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:context=".OrderFragments.OrderSummaryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/action_main_small"
            android:paddingBottom="@dimen/action_main_small"
            android:paddingLeft="@dimen/list_padding"
            android:paddingRight="@dimen/list_padding">

            <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/list_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/selectedItemsTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="Chosen Items"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        android:layout_margin="@dimen/point_top"
                        android:textSize="@dimen/main_add_appointment_actions"
                        android:gravity="start"
                        tools:ignore="SpUsage" />

                    <LinearLayout
                        android:id="@+id/chosenItemsLL"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/orderTotalInfoTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: 111 S.P"
                        android:layout_gravity="center"
                        android:textColor="@color/blackItem"
                        android:textSize="@dimen/main_add_appointment_actions"
                        tools:ignore="SpUsage"
                        android:layout_margin="2dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/list_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/point_top">

                    <TextView
                        android:id="@+id/contactInfoTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="Contact Information"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/main_add_appointment_actions"
                        android:gravity="start"
                        tools:ignore="SpUsage" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/nameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name:  "
                            android:textColor="@color/primary_list_item"
                            android:textSize="@dimen/action_text"/>

                        <TextView
                            android:id="@+id/selectedNameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="@dimen/action_text"
                            android:text="Ahmad"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/phoneTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number:  "
                            android:textColor="@color/primary_list_item"
                            android:textSize="@dimen/action_text"/>

                        <TextView
                            android:id="@+id/selectedPhoneTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="@dimen/action_text"
                            android:text="0951784957"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/remarkTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remark:  "
                            android:textColor="@color/primary_list_item"
                            android:textSize="@dimen/action_text"/>

                        <TextView
                            android:id="@+id/selectedRemarkTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/action_text"
                            android:text="Text"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/list_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/selectedDateTimeTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="Preferable Time"
                        android:layout_margin="@dimen/point_top"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/main_add_appointment_actions"
                        android:gravity="start" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/preferableTimeFromTV"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:gravity="center"
                            android:textSize="@dimen/action_text"
                            android:text="03:00 P.M"/>

                        <ImageView
                            android:layout_width="@dimen/padding_category"
                            android:layout_height="@dimen/padding_category"
                            app:srcCompat="@drawable/ic_next_arrow" />

                        <TextView
                            android:id="@+id/preferableTimeToTV"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textSize="@dimen/action_text"
                            android:text="03:00 P.M"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/list_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/locationTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="Location"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/point_top"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/main_add_appointment_actions"
                        android:gravity="start"
                        tools:ignore="SpUsage" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.gms.maps.MapView
                            android:id="@+id/submitMapView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/contact_message" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/contact_message"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/locationRemarkTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/action_text"
                            android:text="Lattakia"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            tools:ignore="SpUsage"
                            android:maxLines="2"
                            android:paddingLeft="@dimen/point_top"
                            android:paddingRight="@dimen/point_top"
                            android:ellipsize="end"
                            android:textColor="@color/whiteItem"
                            android:background="@drawable/gradient_background"/>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/submitOrderBTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/point_top"
                android:layout_marginBottom="@dimen/point_top"
                android:text="Submit Your Order"
                android:textStyle="bold"
                android:textSize="@dimen/list_item_text"
                android:background="@drawable/primary_button_background"
                android:textColor="@color/whiteItem"
                android:textAllCaps="false"
                tools:ignore="SpUsage" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>