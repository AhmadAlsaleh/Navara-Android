<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/resetCodeTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_layout"
                android:text="Reset Password"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dialogs_title"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:id="@+id/resetCodeClose"
                android:layout_width="@dimen/loaderMargin"
                android:layout_height="@dimen/loaderMargin"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/point_top"
                app:srcCompat="@drawable/ic_close"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/divider_color"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingRight="@dimen/fab_margin"
                android:paddingBottom="@dimen/fab_margin">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="@dimen/item_image_xy"
                        android:layout_height="@dimen/item_image_xy"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_email" />

                    <ImageView
                        android:layout_width="@dimen/main_btn_margin"
                        android:visibility="gone"
                        android:layout_height="@dimen/main_btn_margin"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="@dimen/main_btn_margin"
                        app:srcCompat="@drawable/ic_security"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/resetCodeTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginLeft="@dimen/padding_linear"
                    android:layout_marginRight="@dimen/padding_linear"
                    android:layout_marginBottom="@dimen/point_top"
                    android:textColor="@color/primary_list_item"
                    android:textSize="@dimen/dialogs_title"
                    android:text="Please Enter SMS Code and\nNew Password Below"
                    android:gravity="center"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:id="@+id/resetCodeCodeTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_list_item"
                    android:textSize="@dimen/dialogs_title"
                    android:text="Code:"
                    android:gravity="left"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

                <EditText
                    android:id="@+id/resetCodeCodeET"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_layout"
                    android:inputType="number"
                    android:paddingLeft="@dimen/padding_linear"
                    android:paddingRight="@dimen/padding_linear"
                    android:textSize="@dimen/action_text"
                    android:background="@drawable/edit_text_background"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/resetCodeNewPasswordTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/point_top"
                    android:textColor="@color/primary_list_item"
                    android:textSize="@dimen/dialogs_title"
                    android:text="New Password:"
                    android:gravity="left"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_background">

                    <EditText
                        android:id="@+id/resetCodeNewPasswordET"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/toolbar_layout"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/padding_linear"
                        android:paddingRight="@dimen/padding_linear"
                        android:textSize="@dimen/action_text"
                        android:background="@android:color/transparent"
                        tools:ignore="SpUsage" />

                    <ImageView
                        android:id="@+id/resetCodeEyeIV"
                        android:layout_width="@dimen/toolbar_layout"
                        android:layout_margin="@dimen/point_top"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_eye_black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/resetCodeResetBTN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/point_top"
                        android:paddingLeft="@dimen/margin_fab_appoi"
                        android:paddingRight="@dimen/margin_fab_appoi"
                        android:text="Reset"
                        android:textStyle="bold"
                        android:textSize="@dimen/list_item_text"
                        android:background="@drawable/primary_button_background"
                        android:textColor="@color/whiteItem"
                        android:textAllCaps="false"
                        tools:ignore="HardcodedText,SpUsage" />

                    <Button
                        android:id="@+id/resetCodeCancelBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/point_top"
                        android:paddingLeft="@dimen/margin_fab_appoi"
                        android:paddingRight="@dimen/margin_fab_appoi"
                        android:text="Return"
                        android:textStyle="bold"
                        android:textSize="@dimen/list_item_text"
                        android:background="@drawable/white_button_background"
                        android:textColor="@color/navaraPrimary"
                        android:textAllCaps="false"
                        tools:ignore="HardcodedText,SpUsage" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/resetCodePB"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>