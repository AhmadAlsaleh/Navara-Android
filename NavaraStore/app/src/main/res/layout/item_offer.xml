<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/list_padding"
    android:layout_marginRight="@dimen/list_padding"
    android:layout_marginTop="@dimen/padding_linear"
    android:layout_marginBottom="@dimen/padding_linear">

    <LinearLayout
        android:id="@+id/offerItemLL"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="@dimen/padding_point"
        android:paddingEnd="@dimen/padding_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/offerItemIV"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/list_icons_width_high"
                android:layout_height="@dimen/list_icons_width_high"
                android:src="@drawable/ic_add_shopping_cart"
                app:civ_fill_color="@color/whiteItem"
                app:civ_border_color="@color/divider_color"
                app:civ_border_width="@dimen/divider_width"
                android:layout_margin="@dimen/list_padding"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/offerPercentTV"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/green_button_background"
                android:text="%"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/whiteItem"
                android:layout_marginStart="5dp" />

            <ImageView
                android:id="@+id/offerGiftIV"
                android:visibility="gone"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_gift"
                android:background="@drawable/red_button_background"
                android:padding="@dimen/padding_linear"
                android:layout_marginStart="5dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/list_icons_width_high"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/offerItemTitleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="offer 1"
                    android:textSize="@dimen/list_item_text"
                    android:textColor="@color/primary_list_item"
                    android:ellipsize="end"
                    android:maxLines="1"/>


                <TextView
                    android:id="@+id/offerItemDescriptionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_action_buttons"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/offerDiscountTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-50%"
                    android:textSize="@dimen/list_item_text"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    tools:ignore="SpUsage" />

                <ImageView
                    android:id="@+id/offerCartIV"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="end|center_vertical"
                    app:srcCompat="@drawable/ic_add_shopping_cart"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>