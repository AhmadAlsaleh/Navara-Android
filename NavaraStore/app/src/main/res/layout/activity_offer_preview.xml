<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferPreviewActivity"
    android:background="@drawable/primary_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/offer_service_header"
            android:padding="0dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/itemImagesVP"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/itemCirclesNumberLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/point_top"
                android:paddingRight="@dimen/padding_linear"
                android:paddingLeft="@dimen/padding_linear"
                android:background="@drawable/white_button_background"
                android:orientation="horizontal">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:background="@drawable/gradient_background"/>

            <ImageView
                android:id="@+id/offerBackIV"
                android:layout_width="@dimen/toolbar_layout"
                android:layout_height="@dimen/toolbar_layout"
                app:srcCompat="@drawable/ic_back_arrow_white"/>

            <TextView
                android:id="@+id/offerPreviewPercent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/offer_preview_icon"
                android:text="%"
                android:textSize="25dp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/green_background"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/list_padding"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/offerTitleTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Offer On Arduino"
                    android:textColor="@color/whiteItem"
                    android:textStyle="bold"
                    android:textSize="@dimen/main_buttons"
                    tools:ignore="SpUsage" />

                <ImageView
                    android:id="@+id/addToCartIV"
                    android:layout_width="@dimen/main_texts"
                    android:layout_height="@dimen/main_texts"
                    app:srcCompat="@drawable/ic_add_shopping_cart"
                    android:background="@drawable/ic_circle_white_border"
                    android:padding="@dimen/list_padding"/>

            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/point_top">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/itemExistTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Exist in our stock"
                    tools:ignore="SpUsage"
                    android:layout_marginBottom="@dimen/point_top"/>

                <TextView
                    android:id="@+id/offerCostTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/main_toolbar_title"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/offerDiscountTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-50%"
                        android:layout_margin="@dimen/action_main_big"
                        android:textSize="@dimen/main_toolbar_title"
                        android:textColor="@color/whiteItem"
                        android:paddingTop="@dimen/padding_point"
                        android:paddingBottom="@dimen/padding_point"
                        android:paddingLeft="@dimen/point_top"
                        android:paddingRight="@dimen/point_top"
                        android:background="@drawable/green_button_background"/>

                    <TextView
                        android:id="@+id/offerOldCostTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500 S.P"
                        android:layout_margin="@dimen/action_main_big"
                        android:textSize="@dimen/main_toolbar_title"
                        android:textColor="@color/red_background"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/offerNewCostTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250 S.P"
                    android:textStyle="bold"
                    android:textColor="@color/green_background"
                    android:textSize="@dimen/add_buttons_xy"/>

                <TextView
                    android:id="@+id/offerDescriptionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:layout_marginTop="@dimen/padding_point"
                    android:layout_marginBottom="@dimen/padding_point"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/main_toolbar_title"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/offerDescriptionTextTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_list_item"
                    android:textSize="@dimen/action_text"
                    android:text="Test Test Test Test Test Test Test Test Test Test Test "
                    tools:ignore="SpUsage" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <include layout="@layout/fragment_loading" />

    <FrameLayout
        android:id="@+id/previewDisFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>