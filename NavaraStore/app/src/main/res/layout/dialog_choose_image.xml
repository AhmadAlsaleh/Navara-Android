<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addImageTitleTV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_layout"
                android:text="@string/add_image"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dialogs_title"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageView
                android:id="@+id/addImageCloseIV"
                android:layout_width="@dimen/loaderMargin"
                android:layout_height="@dimen/loaderMargin"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/point_top"
                app:srcCompat="@drawable/ic_close"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/divider_color"/>

        <LinearLayout
            android:id="@+id/addImageTakeLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/list_icons_width_high"
                android:layout_height="@dimen/list_icons_width_high"
                app:srcCompat="@drawable/ic_camera"
                android:padding="@dimen/point_top"/>

            <TextView
                android:id="@+id/addImageTakeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/take_a_photo"
                android:textColor="@color/primary_list_item"
                android:textSize="@dimen/list_item_text"
                android:layout_gravity="center_vertical"
                tools:ignore="HardcodedText,SpUsage" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/divider_color"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"/>

        <LinearLayout
            android:id="@+id/addImageSelectLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/list_icons_width_high"
                android:layout_height="@dimen/list_icons_width_high"
                app:srcCompat="@drawable/ic_photo_library"
                android:padding="@dimen/point_top"/>

            <TextView
                android:id="@+id/addImageSelectTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_from_gallery"
                android:textColor="@color/primary_list_item"
                android:textSize="@dimen/list_item_text"
                android:layout_gravity="center_vertical"
                tools:ignore="SpUsage" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>