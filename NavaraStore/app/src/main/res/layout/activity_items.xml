<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/itemsBackIV"
            android:layout_width="@dimen/toolbar_layout"
            android:layout_height="@dimen/toolbar_layout"
            app:srcCompat="@drawable/ic_back_arrow_white"
            android:padding="@dimen/padding_action_buttons" />

        <TextView
            android:id="@+id/itemsTitleLayoutTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Our Categories"
            android:textStyle="bold"
            android:textSize="@dimen/main_toolbar_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="@color/whiteItem"
            tools:ignore="SpUsage" />

        <RelativeLayout
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/list_margin"
            android:background="@color/whiteBack"/>

        <LinearLayout
            android:id="@+id/searchLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/searchTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Search"
                android:textSize="@dimen/action_main_small"
                android:gravity="center_vertical"
                android:textColor="@color/whiteItem"
                tools:ignore="SpUsage" />

            <ImageView
                android:id="@+id/itemsSearchIV"
                android:layout_width="@dimen/toolbar_layout"
                android:layout_height="@dimen/toolbar_layout"
                app:srcCompat="@drawable/ic_search"
                android:padding="@dimen/padding_action_buttons" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/divider_color"/>

    <FrameLayout
        android:id="@+id/itemsFL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/primary_background" />

    <TextView
        android:id="@+id/itemsOfflineTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You\'re Offline"
        android:textColor="@color/whiteItem"
        android:background="@color/red_background"
        android:padding="@dimen/padding_point"
        android:gravity="center"/>

</LinearLayout>