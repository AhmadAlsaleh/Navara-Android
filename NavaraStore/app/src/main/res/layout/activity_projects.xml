<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectsActivity"
    android:background="@drawable/primary_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/projectsBackIV"
                android:layout_width="@dimen/toolbar_layout"
                android:layout_height="@dimen/toolbar_layout"
                app:srcCompat="@drawable/ic_back_arrow_white"
                android:padding="@dimen/padding_action_buttons" />

            <TextView
                android:id="@+id/projectsTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Projects"
                android:textSize="@dimen/main_toolbar_title"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center_vertical|left"
                android:textColor="@color/whiteItem"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/projectsRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/projectsFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>