<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemPreviewActivity"
    android:background="@drawable/primary_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/offer_service_header"
            android:padding="0dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/itemImagesVP"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/itemCirclesNumberLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/point_top"
                android:paddingRight="@dimen/padding_linear"
                android:paddingLeft="@dimen/padding_linear"
                android:background="@drawable/white_button_background"
                android:orientation="horizontal">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:background="@drawable/gradient_background"/>

            <ImageView
                android:id="@+id/itemBackIV"
                android:layout_width="@dimen/toolbar_layout"
                android:layout_height="@dimen/toolbar_layout"
                app:srcCompat="@drawable/ic_back_arrow_white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_margin="@dimen/list_padding"
                android:clickable="false"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/itemTitleTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Arduino Arduino Arduino Arduino"
                    android:textColor="@color/whiteItem"
                    android:textStyle="bold"
                    android:textSize="@dimen/main_buttons"
                    tools:ignore="SpUsage" />

                <ImageView
                    android:id="@+id/addToCartIV"
                    android:layout_width="@dimen/main_texts"
                    android:layout_height="@dimen/main_texts"
                    app:srcCompat="@drawable/ic_add_shopping_cart"
                    android:background="@drawable/ic_circle_white_border"
                    android:padding="@dimen/list_padding"/>

            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/point_top"
                android:paddingRight="@dimen/point_top"
                android:paddingBottom="@dimen/point_top">

                <TextView
                    android:id="@+id/itemExistTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Exist in our stock"
                    tools:ignore="SpUsage"
                    android:layout_marginBottom="@dimen/point_top"/>

                <TextView
                    android:id="@+id/itemCostTextTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/main_toolbar_title"/>

                <TextView
                    android:id="@+id/itemCostTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250 S.P"
                    android:textStyle="bold"
                    android:textColor="@color/green_background"
                    android:textSize="@dimen/add_buttons_xy"/>

                <TextView
                    android:id="@+id/itemDescriptionTextTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/padding_point"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/main_toolbar_title"/>

                <TextView
                    android:id="@+id/itemDescriptionTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_list_item"
                    android:textSize="@dimen/action_text"
                    android:text="Test Test Test Test Test Test Test Test Test Test Test "/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <include layout="@layout/fragment_loading" />

    <FrameLayout
        android:id="@+id/previewItemFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>