<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/primary_background"
    tools:context=".MoreFeaturesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/moreBackIV"
            android:layout_width="@dimen/toolbar_layout"
            android:layout_height="@dimen/toolbar_layout"
            app:srcCompat="@drawable/ic_back_arrow_white"
            android:padding="@dimen/padding_action_buttons" />

        <TextView
            android:id="@+id/moreTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="More Features"
            android:textStyle="bold"
            android:textSize="@dimen/main_toolbar_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical|left"
            android:textColor="@color/whiteItem"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/eventsCV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    app:cardElevation="@dimen/padding_point"
                    android:layout_marginLeft="@dimen/point_top"
                    android:layout_marginRight="@dimen/point_top"
                    android:layout_marginTop="@dimen/point_top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/eventTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Events"
                            android:textSize="@dimen/main_buttons"
                            android:gravity="center"/>

                        <ImageView
                            android:layout_width="@dimen/main_xy"
                            android:layout_height="@dimen/main_xy"
                            android:layout_margin="@dimen/point_top"
                            app:srcCompat="@drawable/ic_date"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/coursesCV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights"
                    app:cardElevation="@dimen/padding_point"
                    android:layout_margin="@dimen/point_top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/coursesTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Courses"
                            android:textSize="@dimen/main_buttons"
                            android:gravity="center"/>

                        <ImageView
                            android:layout_width="@dimen/main_xy"
                            android:layout_height="@dimen/main_xy"
                            android:layout_margin="@dimen/point_top"
                            app:srcCompat="@drawable/ic_education"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:id="@+id/offersCV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:cardElevation="@dimen/padding_point"
                    android:layout_marginLeft="@dimen/point_top"
                    android:layout_marginRight="@dimen/point_top"
                    android:layout_marginTop="@dimen/point_top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/offersTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Offers"
                            android:textSize="@dimen/main_buttons"
                            android:gravity="center"/>

                        <ImageView
                            android:layout_width="@dimen/main_xy"
                            android:layout_height="@dimen/main_xy"
                            android:layout_margin="@dimen/point_top"
                            app:srcCompat="@drawable/ic_card_giftcard"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/projectsCV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    app:cardElevation="@dimen/padding_point"
                    android:layout_margin="@dimen/point_top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/projectsTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Projects"
                            android:textSize="@dimen/main_buttons"
                            android:gravity="center"/>

                        <ImageView
                            android:layout_width="@dimen/main_xy"
                            android:layout_height="@dimen/main_xy"
                            android:layout_margin="@dimen/point_top"
                            app:srcCompat="@drawable/ic_electronics"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            tools:ignore="NestedWeights">

            <android.support.v7.widget.CardView
                android:id="@+id/usedItemsCV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="@dimen/padding_point"
                android:layout_margin="@dimen/point_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/usedItemsTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Used Items"
                        android:textSize="@dimen/main_buttons"
                        android:gravity="center"/>

                    <ImageView
                        android:layout_width="@dimen/main_xy"
                        android:layout_height="@dimen/main_xy"
                        android:layout_margin="@dimen/point_top"
                        app:srcCompat="@drawable/ic_used_items"
                        android:gravity="center"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>