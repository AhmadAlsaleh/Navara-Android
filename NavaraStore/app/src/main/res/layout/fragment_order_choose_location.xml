<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:context=".OrderFragments.OrderChooseLocationFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/chooseLocationF"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardSearchCV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/point_top"
            android:layout_marginRight="@dimen/point_top"
            android:layout_marginLeft="@dimen/point_top"
            app:cardBackgroundColor="@color/whiteBack">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/main_icons_padding"
                    android:layout_height="@dimen/main_icons_padding"
                    app:srcCompat="@drawable/ic_search_gray"
                    android:layout_margin="@dimen/point_top"
                    android:layout_centerVertical="true"/>

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/add_buttons_xy"
                    android:textSize="@dimen/fab_margin"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/blackItem"
                    android:id="@+id/searchET"
                    android:imeOptions="actionSearch"
                    android:background="@null"
                    android:hint="Enter Address, City or Zip Code"
                    android:gravity="center_vertical|start"
                    android:paddingStart="@dimen/add_buttons_xy"
                    android:paddingRight="@dimen/point_top"
                    android:paddingEnd="@dimen/point_top"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/locationHintsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_location_hints"
        android:textColor="@color/navaraPrimary"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/point_top"
        android:textSize="@dimen/action_main_small"
        android:gravity="start|center_vertical"
        android:background="@color/whiteHide"
        tools:ignore="RtlHardcoded,SpUsage" />

</RelativeLayout>