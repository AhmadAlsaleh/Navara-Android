<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/whiteBack">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_action_buttons">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/markerInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Remark"
                android:gravity="start"
                android:textSize="@dimen/dialogs_title"
                android:textColor="@color/navaraPrimary"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/markerInfoTV"
                android:layout_width="@dimen/luncher_logo"
                android:layout_height="wrap_content"
                android:text="Lattakia"
                android:gravity="start"
                android:textSize="@dimen/list_item_text"
                tools:ignore="HardcodedText,SpUsage" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>